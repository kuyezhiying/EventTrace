{
    "compileOnSave": false,
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "lib": [
            "dom",
            "es2015",
            "es2016"
        ],
        "jsx": "preserve",
        "target": "es2015",
        "module": "esnext",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "outDir": "tmp",
        "baseUrl": ".",
        "paths": {
            "intro.js": [ "src/typings/introjs" ]
        }
    },
    "exclude": [
        "node_modules"
    ]
}